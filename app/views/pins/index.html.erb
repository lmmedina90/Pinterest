<div class="jumbotron">
  <h1>Listing All Pins</h1>
</div>

<div id="columns">
  <% @pins.each do |pin| %>
    <div class="item-background">
        <div class="pin-image">
          <%= image_tag(pin.image_url, :width => "100%")%>
        </div>
        <div class="item-info">
          <h3><%= pin.name %></h3>
          <h4>Board Name: <%= pin.board.name rescue "N/A" %></h4>
          <h4>Pin Creator: <%= pin.user.full_name rescue "N/A" %></h4>
        </div>
        <div class="item-links">
          <%= link_to 'Show', pin %>
          <%= link_to 'Edit', edit_pin_path(pin) %>
          <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    </div>
  <% end %>
</div>  

<br>

<div id="navbar2">
  <table>
    <td><%= link_to 'Delete All Pins', Pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'New Pin', new_pin_path %></td>
  </table>
</div>