<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pin.name %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@pin.image_url, :width => 100) if @pin.image.present? %>
</p>

<p>
  <strong>Board:</strong>
  <%= @pin.board.name rescue "N/A" %>
</p>

<p>
  <strong>User:</strong>
  <%= @pin.user.full_name rescue "N/A" %>
</p>

<div id="navbar2">
	<table>
		<td><%= link_to 'Edit', edit_pin_path(@pin) %></td>
		<td><%= link_to 'Back', pins_path %></td>
	</table>
</div>
